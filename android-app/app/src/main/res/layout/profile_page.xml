<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/profilepicture"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/username"
        android:layout_width="100dp"
        android:layout_height="33dp"
        android:layout_marginTop="4dp"
        android:gravity="top"
        android:text="@string/username"
        android:textAppearance="@style/username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        app:layout_constraintTop_toTopOf="@id/profile_picture" />

    <TextView
        android:id="@+id/anonymous"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="@string/anonymous"
        android:textAppearance="@style/anonymous"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintEnd_toEndOf="@id/username"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.1" />

    <RelativeLayout
        android:id="@+id/frame_69"
        android:layout_width="336dp"
        android:layout_height="356dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/profile_picture"
        app:layout_constraintTop_toBottomOf="@id/profile_picture">

        <!-- Rectangle 1 -->
        <RelativeLayout
            android:id="@+id/rectangle_1"
            android:layout_width="336dp"
            android:layout_height="89dp"
            android:background="@drawable/rectangle_profile">

            <!-- Image on the left, centered vertically -->
            <ImageView
                android:id="@+id/accountImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <!-- text next to the image, centered vertically -->
            <TextView
                android:id="@+id/accountData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/accountImage"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="@string/account_dat"
                android:textAppearance="@style/account_dat"
                android:textStyle="bold"/>


        </RelativeLayout>

        <!-- Rectangle 2 -->
        <RelativeLayout
            android:id="@+id/rectangle_2"
            android:layout_width="336dp"
            android:layout_height="89dp"
            android:background="@drawable/rectangle_profile"
            android:layout_below="@id/rectangle_1">

            <!-- Image on the left, centered vertically -->
            <ImageView
                android:id="@+id/accountImage_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/settings_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <!-- text next to the image, centered vertically -->
            <TextView
                android:id="@+id/accountData_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/accountImage_2"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="@string/settings"
                android:textAppearance="@style/settings"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Rectangle 3 -->
        <RelativeLayout
            android:id="@+id/rectangle_3"
            android:layout_width="336dp"
            android:layout_height="89dp"
            android:background="@drawable/rectangle_profile"
            android:layout_below="@id/rectangle_2">

            <!-- Image on the left, centered vertically -->
            <ImageView
                android:id="@+id/accountImage_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/download_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <!-- text next to the image, centered vertically -->
            <TextView
                android:id="@+id/accountData_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/accountImage_3"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="@string/export_data"
                android:textAppearance="@style/export_data"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Rectangle 4 -->
        <RelativeLayout
            android:id="@+id/rectangle_4"
            android:layout_width="336dp"
            android:layout_height="89dp"
            android:background="@drawable/rectangle_profile"
            android:layout_below="@id/rectangle_3">
            <!-- Image on the left, centered vertically -->
            <ImageView
                android:id="@+id/accountImage_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logout_icon"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp" />

            <!-- text next to the image, centered vertically -->
            <TextView
                android:id="@+id/accountData_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/accountImage_4"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:text="@string/logout"
                android:textAppearance="@style/logout"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Your main content layout goes here -->

        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/white"
            android:elevation="8dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp">

            <FrameLayout
                android:id="@+id/home_icon_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:contentDescription="Home"
                    android:focusable="true"
                    android:src="@drawable/home_home_black" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/transaction_icon_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/transaction_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_transactions_black"
                    android:layout_gravity="center"
                    android:contentDescription="Transactions"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/create_expense_icon_main"
                android:layout_width="56dp"
                android:layout_height="56dp">

                <ImageView
                    android:id="@+id/create_expense_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/add_new"
                    android:layout_gravity="center"
                    android:contentDescription="Create Expense"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="12dp"
                    android:background="@drawable/rounded_button" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/profile_icon_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/profile_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_profile_black"
                    android:layout_gravity="center"
                    android:contentDescription="Profile"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/budget_icon_main"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/budget_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_budget_black"
                    android:layout_gravity="center"
                    android:contentDescription="Budget"
                    android:clickable="true"
                    android:focusable="true" />
            </FrameLayout>
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>