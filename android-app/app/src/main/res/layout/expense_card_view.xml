<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/expenseTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expense Title"
            android:textColor="@color/expense_title_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/expenseAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$100"
            android:textColor="@color/expense_amount_color"
            android:layout_alignParentEnd="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/expenseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aug 13, 2023"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/expenseAmount"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/expenseCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/expenseTitle"
            android:layout_marginTop="14dp"
            android:text="Food"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>