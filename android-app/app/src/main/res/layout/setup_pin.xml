<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/forgot_password_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB9873">

    <RelativeLayout
        android:id="@+id/top_navigat_skin"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#CB9873"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    </RelativeLayout>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title_setup_pin"
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:text="@string/setup_pin"
        android:textAppearance="@style/title_budget"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/magicons_gl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/backButtonIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_white" />

    </RelativeLayout>

    <TextView
        android:id="@+id/let_s_setup_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:gravity="top"
        android:text="@string/let_s_setup_pin"
        android:textAppearance="@style/let_s_setup_pin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/bg_verification_code"
        android:gravity="center"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_setup_pin" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_verification_code"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/editText1"
        app:layout_constraintTop_toTopOf="@id/editText1" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_verification_code"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/editText2"
        app:layout_constraintTop_toTopOf="@id/editText1" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_verification_code"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@id/editText3"
        app:layout_constraintTop_toTopOf="@id/editText1" />

    <!-- Numeric Pad GridLayout -->
    <GridLayout
        android:id="@+id/numericPadGridLayout"
        android:layout_width="410dp"
        android:layout_height="412dp"
        android:layout_margin="2dp"
        android:background="#CB9873"
        android:columnCount="3"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/let_s_setup_pin"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintWidth_percent="0.8">

        <!-- Numeric Pad Buttons -->

        <!-- Buttons 1 to 9 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            style="@style/NumericPadButton"
            android:text="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            style="@style/NumericPadButton"
            android:text="2" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            style="@style/NumericPadButton"
            android:text="3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            style="@style/NumericPadButton"
            android:text="4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5"
            style="@style/NumericPadButton"
            android:text="5" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            style="@style/NumericPadButton"
            android:text="6" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_7"
            style="@style/NumericPadButton"
            android:text="7" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_8"
            style="@style/NumericPadButton"
            android:text="8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            style="@style/NumericPadButton"
            android:text="9" />

        <!-- Empty Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_empty"
            style="@style/NumericPadButton"
            android:text="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            style="@style/NumericPadButton"
            android:text="@string/btn_0" />

        <!-- Backspace Button -->
        <ImageButton
            android:id="@+id/btn_backspace"
            style="@style/NumericPadButton"
            android:background="@null"
            android:src="@drawable/ic_back_arrow" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>