<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CB9873">

    <RelativeLayout
        android:id="@+id/top_navigat_skin"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:background="#CB9873"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    </RelativeLayout>

    <!-- Title TextView -->
    <TextView
        android:id="@+id/title"
        android:layout_width="247dp"
        android:layout_height="48dp"
        android:text="@string/detail_category"
        android:textAppearance="@style/title_budget"
        android:textStyle="bold"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:id="@+id/magicons_gl"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <ImageView
            android:id="@+id/backButtonIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/arrow_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/magicons_trash"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/title"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp">

        <ImageView
            android:id="@+id/trash"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:scaleType="centerInside"
            android:src="@drawable/trash" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/frame_1"
        android:layout_width="412dp"
        android:layout_height="499dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/rounded_top"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/button_continue"
        android:layout_width="343dp"
        android:layout_height="56dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/button_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/edit"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/some_id"
        android:layout_width="343dp"
        android:layout_height="80dp"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="22sp"
        android:textStyle="bold"
        android:text="@string/cost"
        android:textAppearance="@style/some_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/frame_125"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/frame_125"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/category"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:lineSpacingExtra="1sp"
            android:text="@string/category"
            android:textAppearance="@style/detail_transaction_gray"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/categoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/category"
            android:layout_marginTop="17dp"
            android:text="@string/shopping"
            android:textAppearance="@style/detail_transaction_black"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line_3_container"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/line_detail_transaction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:id="@+id/line_3"
            android:layout_width="343dp"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/line_detail_transaction" />

    </RelativeLayout>

    <!--    <TextView-->
    <!--        android:id="@+id/attachment"-->
    <!--        android:layout_width="114dp"-->
    <!--        android:layout_height="0dp"-->
    <!--        android:layout_marginStart="16dp"-->
    <!--        android:layout_marginTop="496dp"-->
    <!--        android:gravity="center_vertical"-->
    <!--        android:text="@string/attachment"-->
    <!--        android:textAppearance="@style/description_detail"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="388dp"
        android:gravity="center_vertical"
        android:text="@string/description"
        android:textAppearance="@style/description_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amet_minim_"
        android:layout_width="369dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="64dp"
        android:gravity="center_vertical"
        android:text="@string/amet_minim_"
        android:textAppearance="@style/amet_minim_"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toTopOf="@+id/description" />


</androidx.constraintlayout.widget.ConstraintLayout>